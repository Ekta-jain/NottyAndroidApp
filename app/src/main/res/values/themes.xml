<resources>
    <!-- Base application theme. -->

    <style name="Platform.Theme.Notty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black30</item>
    </style>

    <style name="Theme.Notty" parent="Platform.Theme.Notty">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/yellow</item>
    </style>


    <style name="Theme.Notty.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black30</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_svg</item>
        <item name="postSplashScreenTheme">@style/Theme.Notty</item>  # Required.
    </style>

</resources>