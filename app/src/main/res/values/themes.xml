<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Platform.Theme.Notty" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/black30</item>
    </style>

    <style name="Theme.Notty" parent="Platform.Theme.Notty">
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryDark">@color/blue800</item>
        <item name="colorAccent">@color/yellow700</item>
    </style>

    <style name="Theme.Notty.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Notty.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Notty.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>